name: {{ project_name }}
topology:
  nodes:
  {% for router in routers %}
    {{ router.name }}:
      kind: arista_ceos
      image: ceos:4.33.0F
      restart-policy: always
      mgmt-ipv4: {{ router.mngt_ipv4.split("/")[0] }}
      startup-config: {{ router.name }}.cfg
  {% endfor %}

  {% for host in hosts %}
    {{ host.name }}:
      kind: linux
      image: alpine:latest
      restart-policy: always
      network-mode: none
      stages:
        create:
          wait-for:
          {% for router in routers %}
            - node: {{ router.name }}
              stage: create
          {% endfor %}
      exec:
        {% for iface in host.interfaces %}
        {% if iface.dhcp %}
        - udhcpc -i {{ iface.linux_name }}
        {% else %}
        - ip addr add {{ iface.ip }} dev {{ iface.linux_name }}
        {% endif %}
        {% endfor %}
        {% if host.dhcp_enabled == false %}
        - ip route add default via {{ host.gateway }}
        {% endif %}
  {% endfor %}
  links:

  {% for link in links %}
    - endpoints: ["{{link[0]}}", "{{link[1]}}"]
  {% endfor %}
  {% for router in routers %}
  {% if router.name == 'Internet_router' %}
  {% for iface in router.interfaces %}
  {% if iface.name != 'Ethernet1' %}
    - endpoints: ["{{iface.peer.name}}:{{iface.peer.linux_name}}", "Internet_router:{{iface.linux_name}}"]
  {%endif%}
  {% endfor %}
  {% endif %}
  {% endfor %}

